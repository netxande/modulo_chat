<div class="clearfix"></div>
  </div>
    <div class="x_content">
      <br>
    <%= form_tag(user_path(@usuario['id']), method: 'put') %>
    <div class="form-horizontal form-label-left" novalidate="">
      <%= form_with(model: user, local: true) do |form| %>
        
        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Usuário</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form.text_field :username, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">E-mail</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form.text_field :email, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>            

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Apelido</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form.text_field :nickname, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Nome</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form.text_field :first_name, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Sobrenome</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form.text_field :last_name, class: "form-control col-md-7 col-xs-12" %>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Idioma</label>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= select(:user, :locale, [['Português', "pt-BR"], ['Inglês', "en"]], {}, {class:'select2_single form-control', tabindex:'-1'}) %>
          </div>
        </div>

        <div class="ln_solid" ></div>
        <div class="form-group" align="center">
            <!--<%= form.submit "Salvar", class:"btn-success"%>-->
            <button type="submit" class="btn btn-success">Enviar informações</button>
            <%= link_to 'Cancelar', users_path, class:"btn btn-primary" %>
            <!--<button class="btn btn-primary" type="reset">Reset</button>-->
        </div>
  <% end %>
</div>